<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LogActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="用户名"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/log_name"
        android:layout_width="230sp"
        android:layout_height="40sp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="请输入用户名" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/log_name"
        android:text="密码"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="230sp"
        android:layout_height="40sp"
        android:layout_alignLeft="@+id/log_name"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/login"
        android:layout_width="230sp"
        android:layout_height="45sp"
        android:layout_alignLeft="@+id/password"
        android:layout_below="@+id/password"
        android:text="登录" />

    <TextView
        android:id="@+id/destroy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView2"
        android:text="注销账号 "
        android:textColor="#0222ff" />

    <TextView
        android:id="@+id/forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/destroy"
        android:layout_alignBottom="@+id/destroy"
        android:layout_toRightOf="@+id/textView2"
        android:text="忘记密码"
        android:textColor="#0222ff" />

</RelativeLayout>